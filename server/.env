# Server Config
# -----------------------------
PORT=4000

# -----------------------------
# Database Config
# -----------------------------
MONGO_URI=mongodb://127.0.0.1:27017/ayurveda_shop

# -----------------------------
# Auth / Security
# -----------------------------
JWT_SECRET=change_this_super_secret
COOKIE_SECURE=false

